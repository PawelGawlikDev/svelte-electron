{
  "name": "electron-vite",
  "version": "1.0.0",
  "description": "An Electron application with Svelte and TypeScript",
  "homepage": "https://electron-vite.org",
  "license": "MIT",
  "author": "pgawlik",
  "main": "./out/main/index.js",
  "scripts": {
    "build": "npm run typecheck && electron-vite build",
    "build-storybook": "storybook build",
    "build:linux": "npm run build && electron-builder --linux --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:win": "npm run build && electron-builder --win --config",
    "dev": "electron-vite dev",
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --fix",
    "prepare": "husky",
    "release": "standard-version",
    "start": "electron-vite preview",
    "storybook": "storybook dev -p 6006",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm storybook build --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on http://127.0.0.1:6006 && pnpm test-storybook\"",
    "test:integration": "playwright test",
    "test:storybook": "test-storybook",
    "test:unit": "vitest",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false"
  },
  "lint-staged": {
    "src/**/*.{js,ts,svelte}": [
      "svelte-check",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@estruyf/github-actions-reporter": "^1.7.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.4.0",
    "@playwright/experimental-ct-svelte": "^1.44.1",
    "@playwright/test": "1.44.1",
    "@storybook/addon-essentials": "^8.1.9",
    "@storybook/addon-interactions": "^8.1.9",
    "@storybook/addon-links": "^8.1.9",
    "@storybook/addon-svelte-csf": "^4.1.3",
    "@storybook/blocks": "^8.1.9",
    "@storybook/builder-vite": "^8.1.9",
    "@storybook/svelte": "^8.1.9",
    "@storybook/svelte-vite": "^8.1.9",
    "@storybook/test": "^8.1.9",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "8.2.2",
    "electron": "31.0.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "2.2.0",
    "eslint": "^9.4.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-svelte": "^2.39.3",
    "globals": "^15.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "playwright": "^1.44.1",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "standard-version": "^9.5.0",
    "storybook": "^8.1.9",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.0",
    "svelte-preprocess": "^6.0.0",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "vite": "^5.3.0",
    "vitest": "^1.6.0",
    "vitest-github-actions-reporter": "^0.11.1",
    "wait-on": "^7.2.0"
  }
}
