{
  "name": "my-app",
  "version": "1.0.2",
  "description": "An Electron application with Svelte and TypeScript",
  "license": "MIT",
  "author": "pgawlik",
  "main": "./out/main/index.js",
  "scripts": {
    "build": "npm run typecheck && electron-vite build",
    "build-storybook": "storybook build",
    "build:linux": "npm run build && electron-builder --linux --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:win": "npm run build && electron-builder --win --config",
    "dev": "electron-vite dev",
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "prepare": "husky install",
    "release": "standard-version",
    "start": "electron-vite preview",
    "storybook": "storybook dev -p 6006",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on http://127.0.0.1:6006 && pnpm test-storybook\"",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false"
  },
  "lint-staged": {
    "src/**/*.{js,ts,svelte}": [
      "svelte-check",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1",
    "@estruyf/github-actions-reporter": "^1.3.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.23.3",
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-essentials": "7.6.2",
    "@storybook/addon-interactions": "7.6.2",
    "@storybook/addon-links": "7.6.2",
    "@storybook/blocks": "7.6.2",
    "@storybook/svelte": "7.6.2",
    "@storybook/svelte-vite": "7.6.2",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "0.2.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/node": "^20.10.1",
    "concurrently": "8.2.2",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "electron-vite": "^1.0.29",
    "eslint": "^8.54.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-svelte": "^2.35.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "standard-version": "^9.5.0",
    "storybook": "7.6.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "wait-on": "^7.2.0"
  }
}
